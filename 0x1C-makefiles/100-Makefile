CC := gcc
SRC := $(wildcard *.c)
OBJ := $(patsubst %.c,%.o,$(SRC))
NAME := school
CFLAGS := -Wall -Werror -Wextra -pedantic

all: $(NAME)

$(NAME): $(OBJ)
	$(CC) -o $@ $^

%.o: %.c m.h
	$(CC) $(CFLAGS) -c $< -o $@

clean:
	@rm -f *~ $(NAME)

oclean:
	@rm -f $(OBJ)

fclean: oclean clean

re: fclean all

.PHONY: all clean fclean oclean re
